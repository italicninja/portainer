# Project Zomboid Dedicated Server Configuration
# Copy this file to .env and fill in your values

# Required: Admin credentials
ZOMBOID_ADMIN_USERNAME=admin
ZOMBOID_ADMIN_PASSWORD=your_secure_admin_password_here

# Required: RCON password for remote management
ZOMBOID_RCON_PASSWORD=your_secure_rcon_password_here

# Optional: Server password (leave empty for public access)
ZOMBOID_SERVER_PASSWORD=

# Optional: Server instance name (no spaces or special characters)
# This is the internal server name, not the display name
ZOMBOID_SERVER_NAME=SSF-HordeNight

# Optional: Memory allocation (default: 6144m)
# Recommended: 6144m-8096m with many mods (42 mods loaded)
ZOMBOID_MEMORY=6144m

# Optional: Timezone (default: UTC)
TZ=UTC
